{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "simplestore-api-cluster",
        "Match": {
          "Path": "api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "identity-route": {
        "ClusterId": "simplestore-identity-cluster",
        "Match": {
          "Path": "api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "webapp-route": {
        "ClusterId": "simplestore-webapp-cluster",
        "Match": {
          "Path": "{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          },
          {
            "RequestHeader": "X-Forwarded-Host",
            "Set": "{RequestHeader:Host}"
          },
          {
            "ResponseHeader": "X-Forwarded-Proto",
            "Set": "{Scheme}"
          }
        ]
      }
    },
    "Clusters": {
      "simplestore-api-cluster": {
        "Destinations": {
          "destination-1": {
            "Address": "${services__simplestore-api__http__0}"
          }
        }
      },
      "simplestore-identity-cluster": {
        "Destinations": {
          "destination-1": {
            "Address": "${services__simplestore-identity__http__0}"
          }
        }
      },
      "simplestore-webapp-cluster": {
        "Destinations": {
          "destination-1": {
            "Address": "${services__simplestore-webapp__http__0}"
          }
        }
      }
    }
  }
}